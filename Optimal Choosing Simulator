#program to simulate optimal stopping. could potentially incoorperate ML to choose an ideal stopping point?

lowstop=0
highstop=100
increment=1
trials=10000

import random
import matplotlib.pyplot as plt



xaxis=[lowstop]
current_number = lowstop
while current_number <= highstop:
    xaxis.append(current_number)
    current_number += increment
yaxis=[0]
for i in range(1,int(((highstop-lowstop)/increment)+1)):
    yaxis.append(0)
print(xaxis)
print(yaxis)
straight=[]
for i in range(0,100):
        straight.append(i)

def makeset():
    random.shuffle(straight)
    return straight

makeset()
score=0
stop=lowstop
axisindex=0
while stop < highstop:
    stop+=increment
    score = 0
    for _ in range(0,trials):
        testset=makeset()
        top=0
        for i in range(0,round(stop)):
            if testset[i] > top:
                top=testset[i]
        for i in range(round(stop),100):
            if i == 99:
                   if testset[i] == 99:
                    score+=1
                    break
            if testset[i] > top:
                if testset[i] == 99:
                    score += 1
                break
    print(stop)
    yaxis[axisindex]=score
    axisindex+=1
    

yaxis.pop(-1)
xaxis.pop(-1)

while len(xaxis) > len(yaxis):
    xaxis.pop(-1)
while len(xaxis) < len(yaxis):
    yaxis.pop(-1)
plt.plot(xaxis, yaxis)
plt.show()

